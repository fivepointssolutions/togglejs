!!!
%html{html_attrs}
  %head
    %meta{"http-equiv"=>"Content-type", :content=>"text/html; charset=utf-8"}/
    %title Toggle JS
    %script{:src=>"/javascripts/prototype.js", :type=>"text/javascript"}
    %script{:src=>"/javascripts/effects.js", :type=>"text/javascript"}
    %script{:src=>"/javascripts/lowpro.js", :type=>"text/javascript"}
    %script{:src=>"/javascripts/toggle.js", :type=>"text/javascript"}
    %style{:type=>"text/css"}
      :sass
        body
          font-family: "Lucida Grande", "Trebuchet MS", Helvetica, Arial, sans-serif
          font-size: 80%
        h3
          border-bottom: 1px solid silver
          padding-bottom: 2px
          margin-top: 10px
        label
          display: block
          &.checkbox, &.radio
            display: inline
        input
          font-size: 100%
        fieldset
          background: #e5e5e5
          border: 1px solid #ddd
          padding: 5px 15px
          margin: 1em 0
          border-radius: 5px
          -moz-border-radius: 5px
          -webkit-border-radius: 5px
        .expand_me
          border: 1px solid silver
          background: white
          padding: 1.5em 1em
          margin-bottom: 1em
        #one,  #two, #three, #seven, #nine
          margin-bottom: 0
    :javascript
      Event.addBehavior({
        'a.toggle': Toggle.LinkBehavior(),
        'a.swap': Toggle.LinkBehavior({swap: true, effect: 'blind'}),
        'form input.checkbox.toggle': Toggle.CheckboxBehavior(),
        'form input.checkbox.inverted_toggle': Toggle.CheckboxBehavior({invert: true}),
        'form .radio_group.toggle': Toggle.RadioGroupBehavior({effect: 'blind'}),
        'form select.toggle': Toggle.SelectBehavior()
      });
  %body
    %h1 toggle.js
    %form
      %fieldset
        %h3 Toggle.LinkBehavior
        .expand_me#one Expanded!
        %p
          %a.toggle{:href=>"#one"} Click to Expand
      %fieldset
        %h3 Toggle.LinkBehavior (swap)
        .expand_me#two Expanded!
        %p
          %a.swap{:href=>"#two"} Click to Open
          %a.swap{:href=>"#two", :style=>"display: none"} Click to Close
      
      %fieldset
        %h3 Toggle.CheckboxBehavior
        %p
          %input.checkbox.toggle{:name=>"checkbox1", :id=>"checkbox1", :type=>"checkbox", :value=>"", :rel=>"toggle[three]"}/
          %label.checkbox{:for=>"checkbox1"} Check for more
        .expand_me#three Expanded!
        %p
          %input.checkbox.toggle{:name=>"checkbox2", :id=>"checkbox2", :type=>"checkbox", :value=>"", :rel=>"toggle[four,five]"}/
          %label.checkbox{:for=>"checkbox2"} Check for even more
        .expand_me#four Expanded! 4
        .expand_me#five Expanded! 5
      %fieldset
        %h3 Toggle.CheckboxBehavior (inverted)
        %p
          %input.checkbox.inverted_toggle{:name=>"checkbox3", :id=>"checkbox3", :type=>"checkbox", :value=>"", :rel=>"toggle[six]"}/
          %label.checkbox{:for=>"checkbox3"} Check for less
        .expand_me#six Expanded!
      
      %fieldset
        %h3 Toggle.RadioGroupBehavior
        .radio_group.toggle
          %p
            %input.radio{:name=>"option", :id=>"option_1", :type=>"radio", :value=>"1", :checked=>true}/
            %label.radio{:for=>"option_1"} None
          %p
            %input.radio{:name=>"option", :id=>"option_2", :type=>"radio", :value=>"2", :rel=>"toggle[seven]"}/
            %label.radio{:for=>"option_2"} Expand One
          .expand_me#seven Expanded!
          %p
            %input.radio{:name=>"option", :id=>"option_3", :type=>"radio", :value=>"3", :rel=>"toggle[eight,nine]"}/
            %label.radio{:for=>"option_3"} Expand Two
          .expand_me#eight Expanded!  
          .expand_me#nine Expanded!
          %p
            %input.radio{:name=>"option", :id=>"option_4", :type=>"radio", :value=>"4", :rel=>"toggle[seven,eight,nine]"}/
            %label.radio{:for=>"option_4"} Expand All
      
      %fieldset
        %h3 Toggle.SelectBehavior
        %p
          %select.toggle{:name=>"select", :id=>"select"}
            %option &lt;select one&gt;
            %option{:value=>"1", :rel=>"toggle[ten]"} Option 1
            %option{:value=>"2", :rel=>"toggle[eleven]"} Option 2
            %option{:value=>"1,2", :rel=>"toggle[ten,eleven]"} Both Options
        .expand_me#ten Expanded! Option 1 selected
        .expand_me#eleven Expanded! Option 2 selected